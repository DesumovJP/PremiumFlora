{
  "kind": "collectionType",
  "collectionName": "tasks",
  "info": {
    "singularName": "task",
    "pluralName": "tasks",
    "displayName": "Task",
    "description": "Tasks with calendar and reminders"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "dueDate": {
      "type": "datetime",
      "required": true
    },
    "reminderAt": {
      "type": "datetime"
    },
    "priority": {
      "type": "enumeration",
      "enum": ["low", "medium", "high"],
      "default": "medium",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "in_progress", "completed", "cancelled"],
      "default": "pending",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["delivery", "supply", "maintenance", "meeting", "other"],
      "default": "other"
    },
    "completedAt": {
      "type": "datetime"
    },
    "notes": {
      "type": "text"
    }
  }
}
